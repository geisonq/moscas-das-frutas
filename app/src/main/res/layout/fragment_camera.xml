<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.geisonquevedo.moscadasfrutas.CameraFragment"
    android:id="@+id/RelativeLayoutCamera">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imgProfilePic"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:contextClickable="false"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:theme="@style/FullscreenTheme"
        android:layout_above="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_marginStart="93dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_camera"
        android:padding="10dp"
        android:background="#ffffff"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnProc"
        android:baselineAlignBottom="true"
        android:visibility="invisible"
        android:longClickable="false"
        android:onClick="setContentView"
        android:src="@mipmap/ic_proc"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnCancel"
        android:baselineAlignBottom="true"
        android:visibility="invisible"
        android:longClickable="false"
        android:onClick="setContentView"
        android:src="@mipmap/ic_close"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imgBtnProc"
        android:layout_toEndOf="@+id/imgBtnProc" />

</RelativeLayout>
